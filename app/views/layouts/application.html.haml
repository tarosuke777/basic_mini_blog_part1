!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title BasicMiniBlogPart1
    %meta{:content => "width=device-width,initial-scale=1", :name => "viewport"}/
    = csrf_meta_tags
    = csp_meta_tag
    
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_pack_tag 'application', 'data-turbolinks-track': 'reload'
  %body
    %header.navbar.navbar-expand-sm.navbar-light.bg-light
      .container
        = link_to "MiniBlog", root_path, class: "navbar-brand"
        %ui.navbar-nav
          - if user_signed_in?
            %li.nav-item
              = link_to "Create Article", new_article_path, class: "nav-link"
            %li.nav-item
              = link_to "Edit User", edit_user_registration_path, class: "nav-link"
            %li.nav-item
              = link_to "Log out", destroy_user_session_path, class: "nav-link", method: :delete
          - else
            %li.nav-item
              = link_to "Log in", new_user_session_path, class: "nav-link"
    .container
      - if flash.notice
        .alert.alert-success
          = flash.notice
      - if flash.alert
        .alert.alert-success
          = flash.alert
      = yield
