= form_with(model: current_user.created_posts.build, local: false, class: "form-horizontal") do |f|
  #errors
  .row
    .col-5
      .mb-3.mb-2
        = f.text_area :content, class: "form-control"
      .mb-3.mb-0
        .custom-file
          = f.file_field :image, class: "custom-file-input", id: "inputFile"
          %label.custom-file-label{"style": "font-size:10px", "for": "inputFile", "data-browse": "#{t(:ref)}"}= t(:image_choice)
      .mb-3.text-end
        = f.submit t(:post), class: "btn btn-primary btn-sm"